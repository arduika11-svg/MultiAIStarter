<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:padding="16dp">
    <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content"
        android:orientation="vertical">

        <EditText
            android:id="@+id/etPrompt"
            android:hint="Ask anything…"
            android:layout_width="match_parent" android:layout_height="wrap_content"
            android:inputType="textMultiLine" android:minLines="2"/>

        <LinearLayout
            android:layout_width="match_parent" android:layout_height="wrap_content"
            android:orientation="horizontal" android:paddingTop="12dp">
            <Button android:id="@+id/btnAskAll" android:text="Ask all"
                android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1"/>
            <Button android:id="@+id/btnAskOpenAI" android:text="Ask OpenAI"
                android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1" android:layout_marginStart="8dp"/>
            <Button android:id="@+id/btnAskGrok" android:text="Ask Grok"
                android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1" android:layout_marginStart="8dp"/>
            <Button android:id="@+id/btnAskGemini" android:text="Ask Gemini"
                android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1" android:layout_marginStart="8dp"/>
        </LinearLayout>

        <TextView android:id="@+id/status" android:text="სტატუსი: მზადაა"
            android:layout_width="match_parent" android:layout_height="wrap_content" android:paddingTop="12dp"/>

        <TextView android:text="Providers:" android:paddingTop="8dp"
            android:layout_width="wrap_content" android:layout_height="wrap_content"/>

        <TextView android:id="@+id/rawOpenAI" android:text="OpenAI: —"
            android:layout_width="match_parent" android:layout_height="wrap_content" android:paddingTop="4dp"/>
        <TextView android:id="@+id/rawGrok" android:text="Grok: —"
            android:layout_width="match_parent" android:layout_height="wrap_content" android:paddingTop="4dp"/>
        <TextView android:id="@+id/rawGemini" android:text="Gemini: —"
            android:layout_width="match_parent" android:layout_height="wrap_content" android:paddingTop="4dp"/>

        <TextView android:id="@+id/unified" android:text="Unified answer გამოჩნდება აქ"
            android:layout_width="match_parent" android:layout_height="wrap_content"
            android:paddingTop="10dp"/>
    </LinearLayout>
</ScrollView>
